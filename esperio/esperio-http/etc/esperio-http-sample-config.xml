<?xml version="1.0" encoding="UTF-8"?><!-- 	Sample esperio-http configuration file.--><esperio-http-configuration xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://www.espertech.com/schema/esperio-http" xsi:noNamespaceSchemaLocation="esperio-http-configuration-7-0.xsd">	<!--		Sample HTTP service.        For use when configuring an HTTP input adapter.     -->	<service name="myservice" port="8079" nio="true"/>		<!--		Sample handler for HTTP Get requests that handles any request URI.        For use when configuring an HTTP input adapter. Requires a service to be defined.     -->	<get service="myservice" pattern="*"/>		<!--		First sample HTTP Get Request triggered by an event arriving in a stream.        For use when configuring an HTTP output adapter.     -->	<request stream="MyOutputEventStream" uri="http://myremotehost:80/root/event" />	<!--		Second sample HTTP Get Request triggered by an event arriving in a stream.        For use when configuring an HTTP output adapter.	    Demonstrates how the URI can be populated from event property values.     -->	<request stream="MyOutputEventStream" uri="http://myremotehost:80/root/event/type=${stream}&amp;parameterOne=${eventProperty1}&amp;parameterTwo=${eventProperty2}" /></esperio-http-configuration>